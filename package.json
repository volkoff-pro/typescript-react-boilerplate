{
  "name": "typescript-simple-boilerplate",
  "version": "1.0.0",
  "description": "Typescript Boilerplate",
  "main": "index.ts",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "lint": "tslint -c tslint.json -p tsconfig.json -t stylish 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json -t stylish 'src/**/*.{ts,tsx}' --fix",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint -c tslint.json -p tsconfig.json -t stylish --fix",
      "git add"
    ]
  },
  "keywords": [],
  "author": "sv.volkoff@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^10.12.0",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-router": "^4.4.1",
    "@types/react-router-dom": "^4.3.1",
    "clean-webpack-plugin": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "mini-css-extract-plugin": "^0.4.5",
    "prettier": "^1.14.3",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.3",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-config": "^7.5.0",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  }
}

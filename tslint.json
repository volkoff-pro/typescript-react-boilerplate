{
  "extends": [
    "tslint-config-airbnb",
    "tslint:latest",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": true,
    "import-name": false,
    "no-implicit-dependencies": [true, "dev"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "linterOptions": {
    "exclude": ["node_modules"]
  }
}
